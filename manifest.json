{
  "name": "Lisa - Typing Assistant",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "popup_image.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "clipboardWrite",
    "clipboardRead",
    "commands"
  ],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["overlay.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "commands": {
    "copy-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Copy overlay suggestion to clipboard"
    }
  }
}
